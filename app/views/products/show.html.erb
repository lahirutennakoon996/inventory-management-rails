<div class="row">
  <div class="col-9">
    <h1 class="">Product Details</h1>
  </div>
</div>

<div class="row">
  <div class="col-6">
    <div class="card bg-primary text-white mb-4">
      <div class="card-header row">
        <div class="col-4">
          Name:
        </div>
        <div class="col-8">
          <%= @product.name %>
        </div>
      </div>

      <div class="card-body">
        <div class="row pb-3">
          <div class="col-4">
            Description:
          </div>
          <div class="col-8">
            <%= @product.description %>
          </div>
        </div>

        <div class="row pb-3">
          <div class="col-4">
            Price ($):
          </div>
          <div class="col-8">
            <%= @product.price %>
          </div>
        </div>

        <div class="row pb-3">
          <div class="col-4">
            Quantity:
          </div>
          <div class="col-8">
            <%= @product.quantity %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>