<div class="row">
  <div class="col-9">
    <h1 class="">All Products</h1>
  </div>
  <div class="col-3 text-end">
    <%= link_to("Add New", new_product_path, class: "btn btn-success") %>
  </div>
</div>

<div class="card mb-4">
  <div class="card-header">
    <i class="fas fa-table me-1"></i>
    DataTable Example
  </div>
  <div class="card-body">
    <table id="datatablesSimple">
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price ($)</th>
        <th>Quantity</th>
        <th></th>
      </tr>
      </thead>

      <tfoot>
      <tr>
        <th>Name</th>
        <th>Position</th>
        <th>Office</th>
        <th>Age</th>
        <th></th>
      </tr>
      </tfoot>

      <tbody>
        <% @products.each do |product|%>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>
            <td><%= product.quantity %></td>
            <td>
              <%= link_to('View', product) %> | <%= link_to('Edit', edit_product_path(product)) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>